{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "src/app/database/models/index.ts"],
    "exclude": ["node_modules"]
}